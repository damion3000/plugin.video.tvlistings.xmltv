<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.tvlistings.xmltv"
version="0.0.32"
name="TV Listings (xmltv)"
provider-name="primaeval">
<requires>
  <import addon="xbmc.python" version="2.20.0"/>
  <import addon="script.module.xbmcswift2" version="2.4.0"/>
  <import addon="script.module.requests" version="2.9.1" />
  <import addon="context.video.tvlistings.xmltv" version="0.0.1" />
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.service" library="service.py" start="login"/>
<extension point="kodi.context.item" library="add.py">
  <item>
    <label>[COLOR yellow]Add Channel[/COLOR]</label>
    <visible>!IsEmpty(Window(10000).Property(XMLTV_CONTEXTMENU_ENABLED))</visible>
  </item>
</extension>
<extension point="kodi.context.item" library="remove.py">
  <item>
    <label>[COLOR yellow]Remove Channel[/COLOR]</label>
    <visible>!IsEmpty(Window(10000).Property(XMLTV_CONTEXTMENU_ENABLED))</visible>
  </item>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">TV Listings (xmltv)</summary>
  <description lang="en">TV Listings (xmltv). Meta4Kodi catchup playback. Addon ini files for live stream selection.</description>
  <disclaimer lang="en">.</disclaimer>
</extension>
</addon>

